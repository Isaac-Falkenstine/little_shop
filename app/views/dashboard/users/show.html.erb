<div class="jumbotron">
  <div class="container">
    <div class="col-md-8">
      <h3>Welcome, <%= "#{@user.first_name} To Your #{@user.role} Dashboard" %></h3>
      <% if @user.role == "merchant" %>
          <%= link_to 'Your Items', dashboard_items_path(:id => @user.id),  method: :get, class: "btn btn-primary btn-xs" %><br />
      <% end %>
      <p>Statistics:</p>
      <% if @user.has_orders? %>
        <p> You have sold: <%= @user.percent_sold  %>% of what you have in stock</p>
        <p> User with most orders from you: <%= @best_user.first_name %> <%= @best_user.last_name %> </p>
      <% else %>
        <p> You have sold: 0% of what you have in stock</p>
        <p> User with most orders from you: N/A %> </p>
      <% end %>
    </div>
  </div>
