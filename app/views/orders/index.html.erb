<div class="jumbotron">
  <div class="container">
    <div class="col-md-12">
      <h2><%= @pawn.first_name %>  <%= @pawn.last_name %> Orders</h2>
      <p>Delivery is always free. Because elves love making you happy.</p>
    </div>
    <hr>
  </div>

  <div class="container">
    <div class="row">
      <div class="smallthings">
      <% @orders.each do |order| %>
        <div class="col-lg-4 d-flex align-items-stretch" id="order-<%=order.id%>">
          <a href='<%= order_path(order) %>'><b><%= order.id %></b></a><br />
          Created at: <%= order.created_at %><br />
          Updated: <%= order.updated_at %><br />
          Status: <%= order.status %><br />
          Total Quantity Of Items: <br />
          Grand Total Of All Items In Cart: <%=@orders.count%> <br />
          <br />
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
